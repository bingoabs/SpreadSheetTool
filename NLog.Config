<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" >
	<targets>
		<!--这个目标:最终输出文件类型, 位于根目录中得logs文件夹中, 名称以每日得时间一次生成log文件 , layout: 这个选项为生成的格式-->
		<target xsi:type="File" name="logfile"
            fileName="${basedir}/logs/debug/${shortdate}.log"
            layout="${longdate} ${uppercase:${level}} ${message}" />
		<!--<target xsi:type="File" name="logfile" fileName="${basedir}/logs/log.csv">
			<layout xsi:type="CSVLayout">
				<column name="time" layout="${longdate}"></column>
				<column name="logger" layout="${logger}"></column>
				<column name="level" layout="${level}"></column>
				<column name="message" layout="${message}"></column>
			</layout>
		</target>-->
	</targets>

	<rules>
		<!--设定了一个Debug得路由, 最终指向了一个f名称得目标 -->
		<logger name="*" minlevel="Debug" writeTo="logfile" />
		<!--<logger name="*" minlevel="Info" writeTo="logfile" /> -->
	</rules>
</nlog>